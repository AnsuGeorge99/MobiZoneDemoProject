<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UILayer</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<head>
 
</head>
<body>
    <nav class="navbar navbar-default">

        <div class="container">
            <div class="navbar-header" style=" margin-left: -133px;">
                <a class="navbar-brand" href="/user/index">
                    <img src="/images/MobiZonelogo.png" alt="..." height="36" style="margin-right: -44px; margin-top: -8px; ">
                </a>
                @*<a href="/user/index" class="navbar-brand">MobiZone</a>*@
            </div>

            <div class="collapse navbar-collapse" id="bs-nav-demo">

                <ul class="nav navbar-nav navbar-right">

                    @if (User.Identity.IsAuthenticated)
                    {
                        <li style="margin-top: -39px;">
                            <a class="nav-link text-dark" asp-controller="User" asp-action="account">@User.Identity.Name </a>
                        </li>
                    }
                    else
                    {
                        <li style=" margin-left: -100px; margin-top: 0px;"><a asp-area="" asp-controller="User" asp-action="UserRegister">Sign Up</a></li>
                        <li style=" margin-top: -49px;; "><a asp-area="" asp-controller="User" asp-action="Login">Login</a></li>
                    }

                </ul>
            </div>

    </nav>
    <nav class="navbar navbar-default" id="second" style="border-bottom: 1px solid #e7e7e7;" ">


        <ul class="nav navbar-nav" style="display:flex; flex-direction:row;">
            <li id="selectitem">
                <div class="row">
                    <form asp-controller="UserProductHome" class="form-inline" asp-action="filter" method="post">
                        <select id="drpEmpList" name="brandName" class="form-control col-6" style="width:216px; margin-top:9px; ">
                            <option value="0">--Select--</option>
                            <option value="samsung">samsung</option>
                            <option value="vivo">vivo</option>

                        </select>

                        <input type="submit" value="Filter" style="margin-top: 8px;" />
                    </form>
                </div>

            </li>
            @*<li><a href="#">SortBy</a></li>*@
            <ul class="navbar-nav">
                <li class="nav-item dropdown" style="padding-right: 128px;">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDarkDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        SortBy
                    </a>
                    <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="navbarDarkDropdownMenuLink">
                        <li><a class="dropdown-item" href="#">High to low</a></li>
                        <li><a class="dropdown-item" href="#">Low to High</a></li>

                    </ul>
                </li>
            </ul>


            <form class="navbar-form navbar-left">

                <div class="form-group">

                    <input type="text" class="form-control" placeholder="Search" style=" width: 493px;">
                </div>
                <button type="submit" class="btn btn-default">Search</button>

            </form>
            @if (User.Identity.IsAuthenticated)
            {



                <ul class="nav navbar-nav" style="display:flex; flex-direction:row;">

                    <ul class="navbar-nav">
                        <li class="nav-item dropdown"
                            @*style=" margin-left: 945px;*@>
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDarkDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Account
                            </a>
                            <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="navbarDarkDropdownMenuLink">
                                <li><a class="dropdown-item" href="/user/MyProfile">My Profile</a></li>
                                <li><a class="dropdown-item" href="/user/MyOrder">MyOrder</a></li>

                            </ul>
                        </li>
                    </ul>
                    <li>
                        <a href="/user/addtocart">
                            <span class="glyphicon glyphicon-shopping-cart"></span>Cart
                        </a>
                    </li>

                </ul>
                <li class="nav-item">
                    <a href="/user/logout">Logout</a>
                </li>
            }
            @*else
                {
                    <li ><a asp-area="" asp-controller="User" asp-action="UserRegister">Sign Up</a></li>
                    <li><a asp-area="" asp-controller="User" asp-action="Login">Login</a></li>
                }*@
        </ul>
    </nav>

    <partial name="Admin\_footer" />

    <div>
        @RenderBody()
    </div>

    @RenderSection("scripts", required: false)
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

