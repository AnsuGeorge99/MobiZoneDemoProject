@model IEnumerable<DomainLayer.Product.ProductsModel>

@{

    var products = ViewData["Products"] as DomainLayer.Product.ProductsModel;
    ViewData["Title"] = "Products";
    Layout = "~/Views/user/_Layout.cshtml";
}

<style>
    .container button {
        border: none;
        outline: 0;
        padding: 12px;
        color: white;
        background-color: #000;
        text-align: center;
        cursor: pointer;
        width: 160%;
        font-size: 18px;
    }

        .container button:hover {
            opacity: 0.7;
        }
        
</style>

<div class="container">
    <div class="row">
        @if (((System.Security.Claims.ClaimsIdentity)User.Identity).HasClaim("role", "Admin"))
        {
            <div class="col-4" style=" margin-top: 20px;">
                <div class="row">
                    <div class="col-12">
                        <img src="~/images/ProductImages/@products.image" style="margin-left: -16px;" />
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="col-4" style=" margin-top: 20px;">
                <div class="row">
                    <div class="col-12">
                        <img src="~/images/ProductImages/@products.image" style="margin-left: -16px;" />
                    </div>
                    <div style=" margin-top: 10px;">

                        <p><a asp-route-id="@products.id" asp-controller="checkout" asp-action="BuyNow"><button class="btn btn-primary">Buy Now</button></a></p>
                        <p><a asp-route-id="@products.id" asp-controller="user" asp-action="addtocart"> <button class="btn btn-primary" style="">Add to Cart</button></a></p>
                    </div>
                </div>
            </div>
        }

        <div class="col-4">
            <div class="products">
                <p class="text" style="font-size: 45px; width: 220%;"> @products.productName</p>
                <br />
                <div class="row">
                    <div class="col-6">
                        <p class="text"><b>Price</b></p>
                        <p class="text"><b>Ram</b></p>
                        <p class="text"><b>Storage</b></p>
                        <p class="text"><b>Sim Type</b></p>
                        <p class="text"><b>Color</b></p>
                        <p class="text"><b>Processor</b></p>
                        <p class="text"><b>Description</b></p>
                    </div>
                    <div class="col-6">
                        <p class="text" style="color: red;"><b>&#8377 @products.productPrice</b></p>
                        <p class="text">@products.specification.productRam</p>
                        <p class="text">@products.specification.productStorage</p>
                        <p class="text">@products.specification.productSim</p>
                        <p class="text">@products.specification.productColor</p>
                        <p class="text" style=" width: 400px;">@products.specification.productProcessor</p>
                        <p class="text" style=" width: 400px;">@products.description</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>