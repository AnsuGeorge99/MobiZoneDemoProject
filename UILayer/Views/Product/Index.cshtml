<table id="myTable" class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Model</th>
            <th>Price</th>
            <th>Image</th>
            <th>Action</th>
        </tr>
    </thead>

</table>
}
<script>
    $(document).ready(function () {
        $.ajax({
            url: 'http://localhost:58070/api/ProductCatagory',
            dataType: 'json',
            success: function (data) {
                console.log(data)
                $('#myTable').DataTable({
                    data: data,
                    columns: [
                        { 'data': 'productName' },

                        { "data": "productModel" },
                        { "data": "productPrice" },

                        {
                            "render": function (data, type, row, meta) {
                                return '<img src="/Images/ProductImages/' + row.image + '"height="50" width="50"/>';
                            }
                        },
                        {
                            "render": function (data, type, row, meta) {
                                return '<a href="Product/Edit/' + row.id + '">Edit</a>';
                            }
                        },
                        {
                            "render": function (data, type, row, meta) { return '<a href="Product/Delete/' + row.id + '">Delete</a>'; }
                        }
                    ]
                });
            }
        })
    })
</script>
