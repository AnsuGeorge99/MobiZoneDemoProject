@model IEnumerable<DomainLayer.UserCheckOut>

@{
    ViewData["Title"] = "MyOrders";
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

<div style="margin: 10px; font-weight: bold;"> My Orders </div>
@foreach (var data in Model)
{
<div class="row" style="padding: 14px; border: solid 1px #d7d1d1; margin: 4px;">
    <div class="col-2">
        <div class="col-12" style="position: relative; left: -42px;">Order Id : @data.orderId</div>
        @if (data.product.image != null)
        {
            <a asp-action="OrderDetails" asp-route-id="@data.id"><img src="~/images/ProductImages/@data.product.image" style="width: 54px;" /></a>
        }
        else
        {
            <a asp-action="OrderDetails" asp-route-id="@data.id"><img src="~/images/Orders not Found.jpg" style="width: 100px;" /></a>
        }

    </div>
    <div class="col-3">
        <div class="col-12" style="font-weight: bold;">@data.product.productName</div>
        <div class="col-12">@data.product.productModel</div>
    </div>
    <div class="col-3">
        <div class="col-12" style="font-weight: bold;color: green;"> &#8377 @data.product.productPrice</div>
    </div>
    <div class="col-2">
        <div class="col-12" style="font-weight: bold;" id="orderStatus">@data.status</div>
    </div>
    <div class="col-2">
        <div class="col-12" style="font-weight: bold;"><button type="submit" class="btn-danger">Cancel Order</button></div>
    </div>
</div>
}

<a type="button" class="btn  btn-orange" style="background-color: #078ceb; padding-left: 1%; padding-right: 1%; color: white; margin-left: 81%; margin-top: 13%; " asp-action="index">Back</a>&nbsp;


<style>
    .product {
        margin-left: 8%;
        font-size: 150%;
    }

    .price {
        margin-top: -34px;
        margin-left: 48%;
        font-size: 150%;
    }

    .status {
        margin-left: 85%;
        margin-top: -35px;
        font-size: 150%;
    }
</style>
<script>
    $(document).ready(function () {
        $("button").click(function () {
            $("#orderStatus").val("Cancelled");
        });
    });
</script>