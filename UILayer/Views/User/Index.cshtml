@model IEnumerable<DomainLayer.Product.ProductsModel>
@{
    ViewData["Title"] = "Index";
}

<style>
    .card{
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        max-width: 300px;
        margin: auto;
        text-align: center;
        font-family: arial;
        padding: 5%;
        width: 80%;
        height: 95%;
    }

    .price {
        color: grey;
        font-size: 22px;
    }

    .card button {
        border: none;
        outline: 0;
        padding: 12px;
        color: white;
        background-color: #000;
        text-align: center;
        cursor: pointer;
        width: 80%;
        font-size: 18px;
    }

    .card button:hover {
        opacity: 0.7;
    }

