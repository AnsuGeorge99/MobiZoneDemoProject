<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UILayer</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    @*   <link rel="stylesheet" href="~/css/site.css" />*@
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>

<body>
    <header style="background-color:cadetblue;">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="user" asp-action="Index">Mobizone</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 col-12 row">

                        <li class="nav-item col">
                            <form class="form-inline" asp-action="SearchProduct">
                                <input class="form-control mr-sm-2" name="name" type="search" placeholder="Search" aria-label="Search">
                                <button class="btn btn-outline-success my-2 my-sm-0" name="name" asp-action="SearchProduct" type="submit">Search</button>
                            </form>
                        </li>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" style="margin-left: 17px;padding-top: 12px; background-color:white" asp-controller="User" asp-action="account">@User.Identity.Name </a>
                            </li>
                            <li class="nav-item dropdown ">
                                <a class="nav-link dropdown-toggle" style="background-color: white; color: black; margin-top: -3px; position: relative; left: 65px;" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    My Account
                                </a>
                                <ul class="dropdown-menu " aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item" asp-controller="user" asp-action="MyProfile">My Profile</a></li>
                                    <li><a class="dropdown-item" asp-controller="user" asp-action="MyOrders">My Orders</a></li>
                                </ul>
                            </li>

                            <li>
                                <a asp-controller="user" asp-action="addtocart" style="background-color: white; color: black; position:relative; top:1px; left: 130px; ">
                                    <span class="glyphicon glyphicon-shopping-cart" ></span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-primary" style="position: relative; left: 200px; margin-left: 0px; padding-top: 5px; padding-bottom: 6px;" asp-area="" asp-controller="User" asp-action="Logout">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-primary" style="margin-left: 0px;padding-top: 5px; padding-bottom: 6px;" asp-area="" asp-controller="User" asp-action="UserRegister">Register</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-primary" style="margin-left: 17px;padding-top: 5px; padding-bottom: 6px;" asp-area="" asp-controller="User" asp-action="Login">Login</a>
                            </li>
                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <partial name="Users\_UserSideBar" />
    <div>
        @RenderBody()
    </div>
    <partial name="Admin\_footer" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await Component.InvokeAsync("Notyf")
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>